{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "preserve",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true, // Allows JavaScript files to be compiled.
    "checkJs": false, // Reports errors in JavaScript files.
    "noEmit": true, // Do not emit outputs.
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports.
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Specify library files to be included in the compilation.
    "skipLibCheck": true, // Skip type checking of declaration files.
    "isolatedModules": true // Transpile each file as a separate module (similar to 'ts.transpileModule').
    ,
    "strict": false,
    "incremental": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "**/*.ts", // Include all TypeScript files.
    "**/*.tsx" // Include all TypeScript JSX files.
, "src/pages/_document.tsx", "next.config.js"  ]
}